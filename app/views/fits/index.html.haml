.fits-wrapper.row
  -@fits.each do |fit|
    .fit
      .fit-head
        .thumb-img
        .user-name
          =fit.user.user_name
      .image.center-block
        =link_to (image_tag fit.image.url(:medium), class:'img-responsive'), fit_path(fit)
      .fit-bottom
        .caption
          .user-name
            = fit.user.user_name
          = fit.caption
        - if fit.comments
          - fit.comments.each do |comment|
            .comment
              .user-name
                = comment.user.user_name
              .comment-content
                = comment.content
              - if comment.user == current_user
                = link_to fit_comment_path(fit, comment), method: :delete, data: { confirm: "Are you sure?" }
        .comment-form
          = form_for [fit, fit.comments.new] do |f|
            = f.text_field :content, placeholder: 'Add a comment...'