= simple_form_for @fit do |f|
  = f.input :image
  = f.input :caption
  = f.button :submit.form-wrapper
  = simple_form_for @fit, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.input :image
    .form-group.text-center
      = f.input :caption
    .form-group.text-center
      = f.button :submit, class: 'btn-success'